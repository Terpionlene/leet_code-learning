class Solution:
def getDescentPeriods(self, prices: list[int]) -> int:
        n = len(prices)
        total = n  
        count = 0  
        for i in range(1, n):
             if prices[i-1] - prices[i] == 1:
                 count += 1
                 total += count  
             else:
                 count = 0 
        return  total
 example=Solution()
 print(example.getDescentPeriods([1,2,3,4]))
